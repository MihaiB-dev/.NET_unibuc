@{
}

<h2>Articles</h2>
<br />

@if(ViewBag.Msg != null)
{
    <h2 class="alert-success p-3 rounded-3 text-center mb-5">
        @ViewBag.Msg
    </h2>
}


@*trb sa pun obligatoriu tipul de date daca vr sa pun partial*@
@foreach (lab1_8.Models.Article article in ViewBag.Articles)
{
    <div class="card" sytle="margin:3rem;">
        <div class="card-body">

            @Html.Partial("ArticleInfo", article)
            

            <a class="btn btn-outline-info" href="Articles/Edit/@article.Id">Edit</a>
            <a class="btn btn-outline-info" href="Articles/Show/@article.Id">See the article</a>
        </div>
    </div>
}

